        <Ellipse VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" x:Name="food"  Fill="#FFF4F4F5" Height="15" Stroke="Black" Width="15" d:IsLocked="True" />
        <Button x:Name="sg" Background="Green" Click="Start" Content="Start Game" Width="213" Visibility="Visible" Height="104" FontSize="36" FontFamily="Segoe UI Black" d:IsLocked="True" Margin="153,75.4,152.4,108.8" Grid.Row="1"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="490" d:IsLocked="True" Grid.RowSpan="2"/>
    </Canvas>
</Window>
